<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroEstagiario"
    android:orientation="vertical"
    android:background="#00A6FF">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />
    />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/logo"
                android:layout_width="336dp"
                android:layout_gravity="center"
                android:layout_height="42dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@mipmap/ic_launcher_foreground" />

            <TextView
                android:id="@+id/cadastroest"
                android:layout_width="250dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:text="@string/cadastroestagiario"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20sp" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:background="@drawable/aroundtext" />

            <EditText
                android:id="@+id/editNomeCadastroEst"
                style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
                android:background="@drawable/edittextstyle"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Nome"
                android:textColorHint="#FFF"
                android:textColor="#FFF"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/editEmailCadastroEst"
                style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
                android:background="@drawable/edittextstyle"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:textColorHint="#FFF"
                android:textColor="#FFF"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/editCpf"
                style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
                android:background="@drawable/edittextstyle"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:layout_width="350dp"
                android:textAlignment="center"
                android:hint="CPF"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />


            <EditText
                android:id="@+id/editSenhaCadastro"
                style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
                android:background="@drawable/edittextstyle"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:layout_width="350dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:hint="Senha"
                android:ems="10"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/editConfirmaSenha"
                style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
                android:background="@drawable/edittextstyle"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:layout_width="350dp"
                android:textAlignment="center"
                android:hint="Confirmar Senha"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/editCidade"
                style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextstyle"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:hint="Cidade"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textColorHint="#FFF" />

            <Button
                android:id="@+id/cadastrar"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/roundbutton"
                android:text="Cadastrar"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>




    </ScrollView>

</LinearLayout>